<h2>Weekly Productivity Report</h2>
<div id="report"></div>
<button id="clear">Clear Data</button>

body {
  font-family: Arial, sans-serif;
  width: 300px;
  padding: 15px;
}

h2 {
  text-align: center;
  font-size: 18px;
}

.site {
  margin: 10px 0;
  padding: 5px;
  border-bottom: 1px solid #ccc;
}

.productive {
  color: green;
  font-weight: bold;
}

.unproductive {
  color: red;
  font-weight: bold;
}

#clear {
  width: 100%;
  padding: 8px;
  margin-top: 15px;
  background-color: #f44336;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

// Simulated data (what would come from Chrome storage)
const trackedSites = {
  "github.com": 900,
  "youtube.com": 300,
  "stackoverflow.com": 480
};

const productiveSites = ["github.com", "stackoverflow.com"];
const unproductiveSites = ["youtube.com", "instagram.com", "facebook.com"];

const reportDiv = document.getElementById("report");

for (let [site, seconds] of Object.entries(trackedSites)) {
  const minutes = Math.floor(seconds / 60);
  let status = "Neutral";
  let className = "";

  if (productiveSites.includes(site)) {
    status = "Productive";
    className = "productive";
  } else if (unproductiveSites.includes(site)) {
    status = "Unproductive";
    className = "unproductive";
  }

  const div = document.createElement("div");
  div.className = site ${className};
  div.textContent = ${site} â€” ${minutes} mins (${status});
  reportDiv.appendChild(div);
}

document.getElementById("clear").addEventListener("click", () => {
  reportDiv.innerHTML = "<p>Data cleared.</p>";
});
